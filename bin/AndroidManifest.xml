        <activity
            android:name="com.example.abcdict.WordListShow"
            android:label="单词列表" >
        </activity>
        <activity
            android:name="com.example.abcdict.WordListDropDown"
            android:label="单词列表" >
        </activity>

        <provider
            android:name="com.example.abcdict.WordContentProvider"
            android:authorities="com.siit.dict"
            android:exported="true" >
